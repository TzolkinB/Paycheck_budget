<p id="notice"><%= notice %></p>
<div class="container">
  <div class="container">
    <div>
    <h4>Income</h4>
    <%= link_to 'New Income', new_income_path %>
    <br>
    </div>
        <div>
          <%= render 'incomes/form2' %>
        </div> 
        <div class="row">
          <div class="col-xs-4">
            <h4>Total Income</h4>
          </div> 
          <div class="col-xs-4">
            <%= Income.sum(:act_income) %>
          </div>
        </div>
    </div>
    <div class="container">
      <div>
      <h4>Bills</h4>
      <%= link_to 'New Bill', new_bill_path %>
      <br>
      </div>
        <div>
          <%= render 'form2' %>
        </div> 
      <div class="row">
        <div class="col-xs-4">
          <h4>Total Bills</h4>
        </div> 
        <div class="col-xs-4">
          <%= Bill.sum(:act_cost) %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <h4>Remaining Balance</h4>
      </div>
      <div class="col-xs-4">
        <%= Income.sum(:act_income) - Bill.sum(:act_cost) %>
      </div>  
    </div>  
 

</div>  
<div class="container">
    <div class="container">
      <div>
      <h4>Savings</h4>
      <%= link_to 'New saving', new_saving_path %>
      <br>
      </div>
         <div>
          <%= render 'savings/form2' %>
        </div> 
        <div class="row">
          <div class="col-xs-6">
            <h4>Balance</h4>
          </div> 
        </div>
    </div>
</div>