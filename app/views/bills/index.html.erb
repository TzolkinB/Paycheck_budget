<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h4>Income</h4>
    <% @incomes.each do |income| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= link_to income.title, income %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= income.pro_income %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
         <div class="panel panel-default">
          <div class="panel-heading">
            <%= render 'actual' %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
      </div><!-- col-md-6 -->
    <% end %>
    
  </div><!-- row -->
  <br>
  <div class="row">
    <h4>Bills</h4>
    <% @bills.each do |bill| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= link_to bill.title, bill %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= bill.pro_cost %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= render 'cost' %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
      </div><!-- col-md-6 -->
    <% end %>
  </div><!-- row -->
  <br>
  <div class="row">
    <h4>Savings</h4>
    <% @savings.each do |saving| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= link_to saving.title, saving %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
          <div class="panel panel-default">
          <div class="panel-heading">
            <%= saving.balance %>
          </div><!-- panel-heading -->
        </div><!-- panel-default -->
      </div><!-- col-md-6 -->
    <% end %>
  </div><!-- row -->
</div>
<%= link_to 'New Income', new_income_path %>
<%= link_to 'New Bill', new_bill_path %>
<%= link_to 'New saving', new_saving_path %>